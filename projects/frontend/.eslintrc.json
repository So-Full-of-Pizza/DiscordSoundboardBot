{
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": ["/build/"],
  "rules": {
    "no-param-reassign": ["error", { "props": false }],
    "react/function-component-definition": "off",
    "react/jsx-curly-spacing": [
      "error",
      {
        "when": "always"
      }
    ]
  }
}
